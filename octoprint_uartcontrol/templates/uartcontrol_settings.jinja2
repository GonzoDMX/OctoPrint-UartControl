<form class="form-horizontal">
    <h3>UART Control Configuration :</h3>
    <hr class="solid">
    <div data-bind="foreach: uartConfigurations">
        <div class="row-fluid uartcontrol-settings-row">
    
			<div class="row-fluid">
				<div class="span2"><h5>Icon</h5></div>
				<div class="span3"><h5>Name</h5></div>
				<div class="span6"><h5>Message</h5></div>
			</div>
    
    		<div class="row-fluid">   
		        <div class="span2">
		            <div class="input-prepend">
		                <span class="add-on"><i class="iconpicker-component"></i></span>
		                <input class="iconpicker span10" type="text" data-bind="value: icon, valueUpdate: 'iconpickerSelected'"/>
		            </div>
		        </div>
		        <div class="span3">
		            <input class="name span12" type="text" data-bind="value: name"/>
		        </div>
		        <div class="span6">
		            <input class="message span12" type="text" data-bind="value: message"/>
		        </div>
            </div>
            
            <div class="row-fluid">
            	<div class="span3"><h5>Serial Port</h5></div>
            	<div class="span2"><h5>Baud Rate</h5></div>
            	<div class="span6"><h5>Trigger on Action</h5></div>
            </div>
            
            <div class="row-fluid">
            	<div class="span3">
            		<select class="serial-select span12" type="text" data-bind="value: serial_port">
            		</select>
        		</div>
		        <div class="span2">
		            <select class="baud-select span12" type="number" data-bind="value: baud_rate">
		                <option value="300">300</option>
		                <option value="1200">1200</option>
		                <option value="2400">2400</option>
		                <option value="4800">4800</option>
		                <option selected="selected" value="9600">9600</option>
		                <option value="19200">19200</option>
		                <option value="38400">38400</option>
		                <option value="57600">57600</option>
		                <option value="74880">74880</option>
		                <option value="115200">115200</option>
		                <option value="230400">230400</option>
		                <option value="250000">250000</option>
		            </select>
		        </div>
		        <div class="span5">
		            <select class="trig-select span12" type="text" data-bind="value: trig_action">
		                <option selected="selected" value="Manual">Manual</option>
		                <option value="start">On server start</option>
		                <option value="shutdown">On server shutdown</option>
		                <option value="connect">On print connect</option>
		                <option value="disconnect">On print disconnect</option>
		                <option value="print">On print start</option>
		                <option value="pause">On print pause</option>
		                <option value="cancel">On print cancel</option>
		                <option value="finish">On print finished</option>
		            </select>
		        </div>
		        <div class="span1">
		            <a title="Remove UART Configuration" class="btn btn-danger" data-bind="click: $parent.removeUartConfiguration">
		                <i class="icon-trash"></i>
		            </a>
		        </div>
		    </div>
        </div>
        <hr class="solid">
    </div>

    <div class="row-fluid">
        <div class="offset10 span1">
            <a title="Add UART Configuration" class="btn btn-primary" data-bind="click: addUartConfiguration">
                <p>Add Control</p>
                <i class="icon-plus"></i>
            </a>
        </div>
    </div>
</form>

